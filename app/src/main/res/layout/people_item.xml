<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:android="http://schemas.android.com/apk/res/android">

  <data>

    <import type="work.kcs_labo.now_emotion_button.R" />

    <variable
      name="viewModel"
      type="work.kcs_labo.now_emotion_button.MainActivityViewModel" />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
      android:id="@+id/emotionIcon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:layout_marginBottom="16dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      tools:srcCompat="@drawable/ic_smile" />

    <TextView
      android:id="@+id/userName"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:textSize="14sp"
      android:ellipsize="end"
      app:layout_constraintStart_toEndOf="@id/emotionIcon"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toStartOf="@id/removeButton"
      tools:text="@sample/name"
      />

    <TextView
      android:id="@+id/emotionState"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:textSize="20sp"
      android:ellipsize="end"
      app:layout_constraintStart_toEndOf="@id/emotionIcon"
      app:layout_constraintBottom_toBottomOf="@id/emotionIcon"
      app:layout_constraintEnd_toStartOf="@id/removeButton"
      tools:text="@sample/emotionState"/>

    <ImageView
      android:id="@+id/removeButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      tools:srcCompat="@drawable/ic_remove_circle_24px"/>

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>